@model WebProject.Models.Book.NewBook

<form asp-action="NewBook" asp-controller="Books" asp-anti-forgery="true" enctype="multipart/form-data">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <h1 class="h3 mb-3 font-weight-normal">Создание новой книги</h1>
        <div>
            <label asp-for="BookTitle" class="col-form-label-lg">Введите название книги*</label><br />
            <input type="text" asp-for="BookTitle" class="form-control-lg" />
            <span asp-validation-for="BookTitle" />
        </div>
        <div>
            <label asp-for="BookAuthor" class="col-form-label-lg">Введите Ф.И.О. автора*</label><br />
            <input type="text" asp-for="BookAuthor" class="form-control-lg" />
            <span asp-validation-for="BookAuthor" />
        </div>
        <div>
            <label asp-for="GenreName" class="col-form-label-lg">Выберите жанр*</label><br />
            <select asp-for="GenreName">
                @foreach (var genre in ViewBag.Genres)
                {
                    <option value="@genre.GenreName">@genre.GenreName</option>
                }
            </select>
        </div>
        <div>
            <label asp-for="BookCoverPath" class="col-form-label-lg">Выберите обложку книги</label><br />
            <input asp-for="BookCoverPath" type="file" class="form-control-file" onchange="readURL(this);" accept=".jpg,.jpeg,.png" />
            <span asp-validation-for="BookCoverPath" />
            <img class="img-thumbnail" id="avatar" width="150" />
        </div>
        <div>
            <label asp-for="BookPDFPath" class="col-form-label-lg">Выберите PDF-версию книги</label><br />
            <input asp-for="BookPDFPath" type="file" class="form-control-file" onchange="readURL(this);" accept=".pdf" />
            <span asp-validation-for="BookPDFPath" />
            <img class="img-thumbnail" id="avatar" width="150" />
        </div>
        <br />
        <label>* - обязательные поля</label>
        <bt />
        <div>
            <input type="submit" value="Добавить" class="btn btn-lg btn-primary" />
        </div>
    </div>
</form>