@model WebProject.Models.Book.BookForRent


<form asp-action="RentBook" asp-controller="Books" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    @Html.HiddenFor(id => Model.BookId)
    @Html.HiddenFor(id => Model.BookOnShelfID)
    <table>
        <tr>
            <td>
                <div>Название книги: @Model.BookTitle</div>
                <div>Автор: @Model.BookAuthor</div>
                @if (Model.IsAvailable)
                {
                    <div>Книга доступна</div>
                    <input type="submit" value="Забронировать" />
                }
                else
                {
                    <div>Книга не доступна</div>
                }
            </td>
        </tr>
    </table>

</form>